{
    "name": "mark/nm-rugby-drupal",
    "description": "Rugby.. Drupal.. NM...",
    "authors": [
        {
            "name": "mark-casias",
            "email": "mark.a.casias@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^2.1",
        "drupal/admin_toolbar": "^3.2",
        "drupal/backup_migrate": "^5.0",
        "drupal/ckeditor5_plugin_pack": "^1.1",
        "drupal/components": "^3@beta",
        "drupal/core-composer-scaffold": "^10.2",
        "drupal/core-recommended": "^10.2",
        "drupal/core-vendor-hardening": "^10.2",
        "drupal/emulsify_twig": "^5.0",
        "drupal/layout_paragraphs": "^2.0",
        "drupal/nomarkup": "^1.0",
        "drupal/pathauto": "^1.11",
        "drupal/sdc_styleguide": "@dev",
        "drupal/smart_trim": "^2.0",
        "drupal/stage_file_proxy": "^3.1",
        "drupal/storybook": "^1.0@beta",
        "drush/drush": "^13.3",
        "mglaman/composer-drupal-lenient": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^10.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-vendor-hardening": true,
            "mglaman/composer-drupal-lenient": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/.htaccess": false,
                "[web-root]/sites/development.services.yml": false
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/profiles/custom/{$name}": ["type:drupal-custom-profile"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        }
    }
}
